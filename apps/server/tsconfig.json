{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@sinopec-kb/tsconfig/nestjs.json",
  "compilerOptions": {
    "resolvePackageJsonExports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@prisma/generated/*": ["src/prisma/generated/*"]
    },
    "types": ["node", "vitest/globals", "multer"],
    "noFallthroughCasesInSwitch": false,
    "outDir": "./dist"
  },
  "exclude": [
    "src/metadata.ts",
    "vitest.base.ts",
    "vitest.config.ts",
    "vitest.config.e2e.ts"
  ]
}
