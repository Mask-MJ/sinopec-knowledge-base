# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Client (Vite)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 启动端口
VITE_PORT=3100
# 路径前缀
VITE_BASE=/
# 全局接口前缀
VITE_GLOB_API_URL_PREFIX=/api/
# 代理地址
VITE_PROXY=http://localhost:3000/api
# 应用标题
VITE_APP_TITLE=Sinopec Knowledge Base
# 应用命名空间，用于缓存、store等功能的前缀，确保隔离
VITE_APP_NAMESPACE=sinopec-kb
# 对store进行加密的密钥
VITE_APP_STORE_SECURE_KEY=please-replace-me-with-your-own-key
# 是否启用 Vue DevTools
VITE_DEVTOOLS=true
# 构建时是否生成依赖分析报告
VITE_VISUALIZER=false
# 是否注入首屏加载动画
VITE_INJECT_APP_LOADING=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Server — Application
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
APP_NAME=Sinopec Knowledge Base
APP_PORT=3000
APP_PREFIX=api
APP_LOG_ON=true
APP_CORS=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Authentication & Security
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
AUTH_BCRYPT_SALT=10
# @secret — JWT signing key (generate: uuidgen)
AUTH_JWT_SECRET=
# Token TTL in seconds (10h)
AUTH_JWT_ACCESS_TOKEN_TTL=36000
# Refresh token TTL in seconds (24h)
AUTH_JWT_REFRESH_TOKEN_TTL=86400

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Database (PostgreSQL)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_DB=sinopec
DATABASE_USER=postgres
# @secret
DATABASE_PASSWORD=
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_DB}

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Redis
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
REDIS_HOST=localhost
REDIS_PORT=6379
# @secret
REDIS_PASSWORD=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Minio (Object Storage)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CLIENT_PORT=9001
MINIO_ROOT_USER=minioadmin
# @secret
MINIO_ROOT_PASSWORD=
# @secret
MINIO_ACCESS_KEY=
# @secret
MINIO_SECRET_KEY=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  RAGFlow
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# @secret
RAGFLOW_API_KEY=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#  Docker Compose (仅 docker compose 使用)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
NGINX_PORT=80
